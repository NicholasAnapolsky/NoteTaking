<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".NoteActivity"
    android:gravity="fill_horizontal"
    android:paddingEnd="15dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <EditText
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView_note" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:weightSum="1">

        <Spinner
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:id="@+id/categorySpinner_note"
            android:spinnerMode="dropdown"
            android:paddingTop="12dp"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_weight="0.42" />

        <Button
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/newCategoryButton_note"
            android:layout_marginLeft="20dp"
            android:onClick="onClick" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bodyTextView_note"
        android:onClick="onClick" />

</LinearLayout>
